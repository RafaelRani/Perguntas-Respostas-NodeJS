<%- include("../partials/header.ejs") %>
<body>
    <%- include("../partials/navbar.ejs") %>
    <div class="container" id="formulario-question">
        <div class="card" >
            <div class="card-header">
                <h3>Editar Pergunta</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/questions/update">
                    <label>Autor</label>
                    <input type="text" placeholder="author" class="form-control" name="author" value="<%= question.author %>">
                    <br><label>Título</label>
                    <input type="text" placeholder="Título" class="form-control" name="title" value="<%= question.title %>">
                    <br><label>Descrição</label>
                    <textarea placeholder="escreva sua pergunta aqui" id="question" class="form-control" name="description"><%- question.description %></textarea>
                    <input type="hidden" name="id" value="<%= question.id %>">
                    <br>
                    <button class="btn btn-danger">Atualizar</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include("../partials/footer.ejs") %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language:'pt_BR',
        selector: "#question",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    })
</script>